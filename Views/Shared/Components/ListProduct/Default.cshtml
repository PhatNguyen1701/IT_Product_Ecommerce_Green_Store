@model IEnumerable<ITProductECommerce.ViewModels.ProductVM>

<div class="owl-carousel vegetable-carousel justify-content-center">
    @foreach (var item in Model)
    {
        <div class="border border-primary rounded position-relative vesitable-item">
            <div class="vesitable-img">
                <img src="~/img/Products/@item.ImageURL" class="img-fluid w-100 rounded-top" alt="">
            </div>
            <div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">@item.CategoryName</div>
            <div class="p-4 rounded-bottom">
                <h4>@item.ProductName</h4>
                <p>@item.UnitDescription</p>
                <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold mb-0">$@item.UnitPrice</p>
                    <a asp-controller="Products" asp-action="Detail" asp-route-id="@item.ProductId" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> Detail</a>
                </div>
            </div>
        </div>
    }
</div>