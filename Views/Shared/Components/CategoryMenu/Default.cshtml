@model IEnumerable<ITProductECommerce.ViewModels.CategoryMenuVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled fruite-categorie overflow-auto">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        @if (Context.Request.Path == "/Products" || Context.Request.Path.ToString().Substring(0, 16) == "/Products/Detail"
                            || Context.Request.Path.ToString().Substring(0, 16) == "/Products/Search")
                        {
                            <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@item.CategoryId">
                                <i class="fas fa-apple-alt me-2"></i>@item.CategoryName
                            </a>
                        }
                        else if(Context.Request.Path == "/AdminPanel/ProductPanel")
                        {
                            <a asp-controller="AdminPanel" asp-action="ProductPanel" asp-route-categoryId="@item.CategoryId">
                                <i class="fas fa-apple-alt me-2"></i>@item.CategoryName
                            </a>
                        }
                        <span>(@item.Quantity)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>