@model ITProductECommerce.ViewModels.CategoryVM

@{
    ViewData["Title"] = "CategoryPanel";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Category Management</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="AdminPanel" asp-action="Index">Admin Panel</a></li>
        <li class="breadcrumb-item active text-white">Category Management</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">Green Store Products</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <div class="input-group w-100 mx-auto d-flex">

                        </div>
                    </div>
                    <div class="col-6"></div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            <div class="col-lg-12">

                            </div>
                            <div class="col-lg-12">

                            </div>
                            <div class="col-lg-12">
                                <div class="position-relative">
                                    <img src="~/static/banner-fruits.jpg" class="img-fluid w-100 rounded" alt="">
                                    <div class="position-absolute" style="top: 50%; right: 10px; transform: translateY(-50%);">
                                        <h3 class="text-secondary fw-bold">Fresh <br> Fruits <br> Banner</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            <h3 class="mb-2 display-3 text-primary">Category Manager</h3>

                            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                                <a asp-controller="AdminPanel" asp-action="EditCategory" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Create New Category</a>
                            </div>

                            @foreach (var item in Model.Categories)
                            {
                                <div class="col-md-6 col-lg-6 col-xl-4">
                                    <div class="rounded position-relative fruite-item">
                                        <div class="fruite-img">
                                            <img src="~/img/Categories/@item.ImageURL" class="img-fluid w-100 rounded-top" alt="@item.CategoryName">
                                        </div>
                                        <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                            <h4>@item.CategoryName</h4>
                                            <p class="overflow-auto">@item.Description</p>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <p class="text-dark fs-5 fw-bold mb-0"></p>
                                            </div>
                                            <div class="d-flex justify-content-between flex-lg-wrap">
                                                <a asp-controller="AdminPanel" asp-action="EditCategory" asp-route-categoryId="@item.CategoryId" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i>Edit</a>
                                                <a asp-controller="AdminPanel" asp-action="DeleteCategory" asp-route-categoryId="@item.CategoryId" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i>Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            @await Html.PartialAsync("_CategoryIndexPagination", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->
