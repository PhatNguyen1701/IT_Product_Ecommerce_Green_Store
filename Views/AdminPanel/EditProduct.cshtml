@model ITProductECommerce.ViewModels.ProductVM

@{
    ViewData["Title"] = "EditProduct";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Edit Product</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="AdminPanel" asp-action="Index">Admin Panel</a></li>
        <li class="breadcrumb-item"><a asp-controller="AdminPanel" asp-action="ProductPanel">Product Panel</a></li>
        <li class="breadcrumb-item active text-white">Edit Product</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Product's infomation</h1>
        <form asp-controller="AdminPanel" asp-action="EditProduct" method="post" enctype="multipart/form-data">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="row">
                        <input asp-for="ProductId" type="hidden" />
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Product's name</label><sup>*</sup>
                                <input asp-for="@Model.ProductName" type="text" class="form-control">
                                <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Alias</label><sup>*</sup>
                                <input asp-for="@Model.Alias" type="text" class="form-control">
                                <span asp-validation-for="@Model.Alias" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Category</label><sup>*</sup>
                                <select asp-for="@Model.CategoryId" class="form-control">
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item.CategoryId">@item.CategoryName</option>
                                    }
                                </select>
                                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Unit description</label><sup>*</sup>
                                <input asp-for="@Model.UnitDescription" type="text" class="form-control">
                                <span asp-validation-for="@Model.UnitDescription" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Unit price</label><sup>*</sup>
                                <input asp-for="@Model.UnitPrice" type="text" class="form-control">
                                <span asp-validation-for="@Model.UnitPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Discount</label><sup>*</sup>
                                <input asp-for="@Model.Discount" type="text" class="form-control">
                                <span asp-validation-for="@Model.Discount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Unit In Stock</label><sup>*</sup>
                                <input asp-for="@Model.UnitInStock" type="text" class="form-control">
                                <span asp-validation-for="@Model.UnitInStock" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Description</label><sup>*</sup>
                                <input asp-for="@Model.Description" type="text" class="form-control">
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label class="form-label my-3">Provider</label><sup>*</sup>
                                <select asp-for="@Model.ProviderId" class="form-control">
                                    @foreach (var item in Model.Providers)
                                    {
                                        <option value="@item.ProviderId">@item.CompanyName</option>
                                    }
                                </select>
                                <span asp-validation-for="@Model.ProviderId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <label class="form-label my-3">Product Picture</label>
                    <div id="edit-container">
                        @if (Model.ProductId == 0)
                        {
                            <img id="profileImage" src="~/static/edit-image-default-img.png" />
                        }
                        else
                        {
                            <img id="profileImage" src="~/img/Products/@Model.ImageURL" />
                        }
                    </div>
                    <input class="pt-3" id="imageUpload" type="file" name="Image" />
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">Submit</button>
                    @if (ViewBag.Message != null)
                    {
                        <script type="text/javascript">
                            @*$(document).ready(function(){alert('@ViewBag.Message');});*@
                            window.onload = function () {
                                alert("@ViewBag.Message");
                            };
                        </script>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        imageUpload.onchange = evt => {
            const [file] = imageUpload.files
            if (file) {
                profileImage.src = URL.createObjectURL(file)
            }
        }
    </script>
}






