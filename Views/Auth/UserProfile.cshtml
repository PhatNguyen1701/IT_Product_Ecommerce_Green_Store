                        </div>*@
                </div>
            </div>
            <div class="col-md-12 col-lg-6 col-xl-5">
                <div class="d-flex justify-content-center align-content-center pt-4">
                    <div id="profile-container">
                        <img id="profileImage" src="~/img/User/@Model.AvatarURL" />
                    </div>
                </div>
                <div class="d-flex justify-content-center align-content-center">
                    <label class="form-label my-4 display-5">Profile Picture</label>
                </div>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                <a asp-controller="Auth" asp-action="UpdateUserProfile" asp-route-userId="@Model.UserId" class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">Update Profile</a>
            </div>
            <div class="row g-4 text-center align-items-center justify-content-center">
                <a asp-controller="Auth" asp-action="Logout" class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">Logout</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var chat = localStorage.getItem("chatVisible");
        if (chat == "True") {
            $(".chat-popup").show();
        }
        else {
            $(".chat-popup").hide();
        }
    </script>
}