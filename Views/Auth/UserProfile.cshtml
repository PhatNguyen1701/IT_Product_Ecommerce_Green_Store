@model ITProductECommerce.ViewModels.UserProfileVM

@{
    ViewData["Title"] = "UserProfile";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@Model.UserId</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active text-white">@Model.UserId</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">@Model.UserId Profile</h1>
        <div class="row g-5">
            <div class="col-md-12 col-lg-6 col-xl-7">
                <div class="row">
                    <div class="table-responsive">
                        <div class="row bg-success text-white align-items-center text-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">Username</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-0">@Model.UserId</p>
                            </div>
                        </div>
                        <div class="row text-center align-items-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">First name</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-0">@Model.FirstName</p>
                            </div>
                        </div>
                        <div class="row bg-success text-white text-center align-items-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">Last name</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-0">@Model.LastName</p>
                            </div>
                        </div>
                        <div class="row text-center align-items-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">Gender</p>
                            </div>
                            @if (Model.Gender == true)
                            {
                                <div class="col-6">
                                    <p class="mb-0">Male</p>
                                </div>
                            }
                            else
                            {
                                <div class="col-6">
                                    <p class="mb-0">Female</p>
                                </div>
                            }
                        </div>
                        <div class="row bg-success text-white text-center align-items-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">Date of birth</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-0">@Model.DoB</p>
                            </div>
                        </div>
                        <div class="row text-center align-items-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">Email</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <div class="row bg-success text-white text-center align-items-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-0">@Model.Address</p>
                            </div>
                        </div>
                        <div class="row text-center align-items-center justify-content-center py-3">
                            <div class="col-6">
                                <p class="mb-0">Phone number</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-0">@Model.PhoneNumber</p>
                            </div>
                        </div>
                    </div>
