                            }
                            else
                            {
                                <p style="color: green; font-weight: bold; margin-left: 14.2rem; margin-top: 1rem;">Female</p>
                            }
                        </div>
                        <div class="form-item" style="display: flex;">
                            <label class="form-label my-3" asp-for="@Model.DoB"></label>
                            <p style="color: green; font-weight: bold; margin-left: 11.7rem; margin-top: 1rem;">@Model.DoB</p>
                        </div>
                        <div class="form-item" style="display: flex;">
                            <label class="form-label my-3" asp-for="@Model.Address"></label>
                            <p style="color: green; font-weight: bold; margin-left: 13.7rem; margin-top: 1rem;">@Model.Address</p>
