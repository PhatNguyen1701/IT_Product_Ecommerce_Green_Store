
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Login</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Auth" asp-action="Login">Login</a></li>
        <li class="breadcrumb-item"><a asp-controller="Auth" asp-action="ForgotPassword">Forgot Password</a></li>
        <li class="breadcrumb-item active text-white">Forgot Password Confirmation</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Forgot Password Confirmation!</h1>
        <p>
            The link has been sent, please check your email to reset your password.
        </p>
    </div>
</div>
