@model ITProductECommerce.ViewModels.UserProfileVM

@{
    ViewData["Title"] = "UpdateUserProfile";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Update @Model.UserId Profile</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Auth" asp-action="UserProfile" asp-route-customerName="@User.Identity.Name">@Model.UserId</a></li>
        <li class="breadcrumb-item active text-white">Update Profile</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Edit Profile</h1>
        <form asp-controller="Auth" asp-action="UpdateUserProfile" enctype="multipart/form-data">
            <div class="row g-5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="row">
                        <input asp-for="@Model.UserId" type="hidden" class="form-control">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Password" type="password" class="form-control">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.ConfirmPassword" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.ConfirmPassword" type="password" class="form-control">
                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.FirstName"></label><sup>*</sup>
                            <input asp-for="@Model.FirstName" class="form-control" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.LastName"></label><sup>*</sup>
                            <input asp-for="@Model.LastName" class="form-control" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div class="py-2"></div>
                        <div class="form-item">
                            <input class="form-check-input" id="Gender" name="Gender" type="checkbox" value="false">
                            <label class="form-check-label" for="Gender">Is Male</label>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.DoB"></label><sup>*</sup>
                            <input asp-for="@Model.DoB" class="form-control" />
                            <span asp-validation-for="@Model.DoB" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.Address"></label><sup>*</sup>
                            <input asp-for="@Model.Address" class="form-control" />
                            <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.PhoneNumber"></label><sup>*</sup>
                            <input asp-for="@Model.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <label class="form-label my-3">Profile Picture</label>
                    <div id="profile-container">
                        <img id="profileImage" src="~/img/User/@Model.AvatarURL" />
                    </div>
                    <input class="pt-3" id="imageUpload" type="file" name="Image" />
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">Update</button>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center">
                    <a asp-controller="Auth" asp-action="UserProfile" asp-route-username="@Model.UserId">Go back</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#Gender").change(function () {
                if ($(this).prop("checked")) {
                    $(this).val(true);
                }
                else {
                    $(this).val(false);
                }
            });
        });

        imageUpload.onchange = evt => {
            const [file] = imageUpload.files
            if (file) {
                profileImage.src = URL.createObjectURL(file)
            }
        }

        var chat = localStorage.getItem("chatVisible");
        if (chat == "True") {
            $(".chat-popup").show();
        }
        else {
            $(".chat-popup").hide();
        }
    </script>
}


