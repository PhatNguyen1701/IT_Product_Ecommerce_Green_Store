@model ITProductECommerce.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Register</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active text-white">Register</li>
    </ol>
</div>
<!-- Single Page Header End -->

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Register</h1>
        <form asp-action="Register" enctype="multipart/form-data">
            <div class="row-g5">
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.CustomerId" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.CustomerId" type="text" class="form-control">
                                <span asp-validation-for="@Model.CustomerId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6"></div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Password" type="password" class="form-control">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.ConfirmPassword" class="form-label my-3"></label><sup>*</sup>
                                <input asp-for="@Model.ConfirmPassword" type="password" class="form-control">
                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.CustomerName"></label><sup>*</sup>
                            <input asp-for="@Model.CustomerName" class="form-control" />
                            <span asp-validation-for="@Model.CustomerName" class="text-danger"></span>
                        </div>
                        <div class="form-check my-3">
                            <input asp-for="@Model.Gender" type="checkbox" class="form-check-input" id="Gender" name="Gender">
                            <label class="form-check-label" for="Gender">Male?</label>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.DoB"></label><sup>*</sup>
                            <input asp-for="@Model.DoB" class="form-control" />
                            <span asp-validation-for="@Model.DoB" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.Address"></label><sup>*</sup>
                            <input asp-for="@Model.Address" class="form-control" />
                            <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.PhoneNumber"></label><sup>*</sup>
                            <input asp-for="@Model.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" asp-for="@Model.Email"></label><sup>*</sup>
                            <input asp-for="@Model.Email" class="form-control" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label class="form-label my-3" for="Image">Image</label><sup>*</sup>
                            <input type="file" name="Image" class="form-control" />
                        </div>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">Register</button>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <p>Already have an account? <a asp-controller="Auth" asp-action="Login">Login now!</a></p>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#Gender").change(function () {
                if ($(this).prop("checked")) {
                    $(this).val(true);
                }
                else {
                    $(this).val(false);
                }
            });
        });
    </script>
}

